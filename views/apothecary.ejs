<h1 class="forageTitle">Fancy Taking A Journey? Then Forage A New Remedy!</h1>
 
<div class="foragingBox">
  <button data-tf-popup="XmyCyzN2" data-tf-size="100" data-tf-iframe-props="title=Interactive Fiction (copy)" style="all:unset;font-family:Helvetica,Arial,sans-serif;display:inline-block;max-width:100%;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;background-color:#614E38;color:#FFFFFF;font-size:31px;border-radius:38px;padding:0 51px;font-weight:bold;height:77.5px;cursor:pointer;line-height:77.5px;text-align:center;margin:0;text-decoration:none;">Forage A New Remedy!</button><script src="//embed.typeform.com/next/embed.js"></script>



  <!-- <form action="/post" method="POST"> -->
<h2 class="herbDiscoveryTitle">What ingredient did you discover today?</h2>
<!---THIS NEEDS TO BE A POST REQUEST THAT SENDS THE RESULT TO WHERE THE
HERBS POPULATE THAT ARE STORED IN THE DATABASE-->


<div class="theInputs">
    <p>Herb/Root Name: </p><input type="text" placeholder="name of ingredient" name="addANewHerb" class="ingredientName">
    <p>Tastes Like?: </p><input type="text" placeholder="tastes like" name="taste" class="taste">
    <p>Pairs Well With These Herbs/Roots: </p><input type="text" placeholder="pairs well with" name="pairsWith" class="pair">
    <p>Medicinal Benefits: </p><input type="text" placeholder="medicinal benefits" name="medicinalBenefits" class="benefits">
    <button class="addButton">Add To My Cabinet!</button>
  </div>
  <!-- </form> -->
</div>
</div>



<div class="headTitle"><h1>Current Inventory</h1></div>

<div class="container">    
  <div class="row">

    <% if (herbs) { %>
      <% herbs.forEach(data=> { %>

    <div class="col-sm-4">
      
        
      <div class="card" style="width: 18rem;">
        <div class="card-header text-center theFont">
          <%= data.name %>
        </div>
        <img src="<%= data.url %>" class="card-img-top p-2" alt="...">
        <div class="card-body">
          <p class="card-text">
            <p class="card-text">Tastes Like: <%= data.taste %></p>    
            <p class="card-text">Pairs Well With: <%= data.pairsWith %></p>
            <p class="card-text">Health Benefits: <%= data.medicinalBenefits %></p>
           
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>    
            <button type="submit" method="DELETE">Remove From My Cabinet</button>
        </p>
        </div>
      </div>
     
    </div>
    <% } ) %>
    <% } %>
  </div>
  </div>

  
  


<script src="apothecary.js"></script>
