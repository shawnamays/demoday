    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"></script>

</head>

<body>
  <nav class="navbar navbar-expand-lg bg-light">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Brew Work</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link active" aria-current="page" href="/profile">Home</a>
          <a class="nav-link" href="/apothecary">Apothecary</a>
          <a class="nav-link" href="/brew">I want to brew</a>
          <a class="nav-link" href="/healingtracker">Healing Journey</a>
          <a class="nav-link" href="/logout">Logout</a>
        </div>
      </div>
    </div>
  </nav>
  <h1 class="cauldronTitle">Brewing Cauldron</h1>
  <img class="brewingHeader" src="https://i.ibb.co/FJpm992/Brown-Simple-Ethnic-Tribal-Logo.png">


  <!--AREA WHERE THE BASES ARE SELECTED ON THE FAR LEFT OF THE PAGE-->
  <div class="container text-center">
    <div class="row">
      <div class="col basesColumn">
        <div class="card basesSection" style="width: 18rem;">
          <div class="card-header">
            Bases To Start With
          </div>
          <ul class="list-group list-group-flush basesCategories">
            <li class="list-group-item">Standard Base
              <br>
             <p class="baseOption">hot water</p> 
            </li>
            <li class="list-group-item">Citrus Base
              <br>
              <p class="baseOption">hot water | fresh lemon | apple cider vinegar
              </p> 
            </li>
            <li class="list-group-item">Dairy Base
              <br>
              <p class="baseOption">hot milk | hot water</p> 
            </li>
            <li class="list-group-item">Spiced Base
              <br>
              <p class="baseOption">hot milk | hot water | chai concentrate</p> 
            </li>
          </ul>
        </div>
      </div>
      <div class="col createBrewCol">


        <!--THIS IS THE START OF THE RECIPE FORM TO ADD A NEW BREW-->
        <form action="/newRemedies" method="POST">
          <div class="form-group">
            <label for="exampleFormControlInput1">Name Your New Brew Remedy</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="name your brew"
              name="brewName">
          </div>
          <div class="form-group">

            
            <label for="exampleFormControlSelect1">Choose A Base To Start With</label>
            <select class="form-control" id="exampleFormControlSelect1" name="base">
              <option value="standard">Standard</option>
              <option value="citrus">Citrus</option>
              <option value="dairy">Dairy</option>
              <option value="spiced">Spiced</option>

            </select>
          </div>
<!--THIS IS WHERE I WANT THE HERBS IMPORTED FROM THE APOTHECARY CABINET-->
          <div class="form-group">
            
            <label for="exampleFormControlSelect2">Pick The Key Ingredients From Your Apothecary</label>
            <select multiple class="form-control" id="exampleFormControlSelect2" name="herbSelection">
           <% for (let i = 0; i < herbs.length; i++) { %>
            <option value="<%= herbs[i].name %>"><%= herbs[i].name %></option>

           <% } %>
           
            
            </select>
          </div>

          <div class="form-group">
            <label for="exampleFormControlTextarea1">How will you prepare your brew?</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="instructions" placeholder="You can write anything, don't forget to include the medicinal purpose!"></textarea>
          </div>
          <button type="submit">Brew Something New</button>
        </form>
      </div>


      <!---THIS IS THE AREA WHERE THE RECIPES ARE SAVED ON THE FAR RIGHT-->
      <div class="col savedCol">

        <% if (brews) { %>
        <% brews.forEach(data=> { %>

        <div class="savedRecipes">
          <div class="list-group">
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
              <div class="d-flex w-100 justify-content-between">
                <!--THE TITLE OF THE RECIPE IS DISPLAYED HERE-->
                
                
                <h5 class="recipeTitle"><%= data.name %></h5>
                <!--THE DATE OF POSTING IS GOING TO GO HERE-->
                <small>1 day ago</small>
              </div>

  
              <!--THE RECIPE SNIPPET WILL BE DISPLAYED HERE-->
              <p class="recipeDescrip">
                
                Required Ingredients:  <%= data.herbSelection %>
                <br>
                Instructions & Use:
                <br><%= data.instructions %>
              
              </p>
              <small><p>Base:<%= data.base %></p></small>
              <br>
              <button type="submit" method="DELETE">Delete This Remedy</button>
            </a>

         

                <!--THE TITLE OF THE RECIPE IS DISPLAYED HERE-->
                
            </a>
          </div>
        </div>

        <% } ) %>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  
</body>

</html>