                <div class="navbar-nav">
                    <a class="nav-link active" aria-current="page" href="/profile">Home</a>
                    <a class="nav-link" href="/apothecary">Apothecary</a>
                    <a class="nav-link" href="/brew">I want to brew</a>
                    <a class="nav-link" href="/healingtracker">Healing Journey</a>
                    <a class="nav-link" href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </nav>



    <h1 class="healingTitle">Healing Journey Progress</h1>
    <div class="container">
        <div class="row">


            <div class="col-sm journalEntryContainer">
                <!---THIS IS THE LEFT SIDE COLUMN OF THE PAGE WHERE THE JOURNAL ENTRY SNIPPETS ARE DISPLAYED-->
                <% for (let i=0; i < moods.length; i++) { %>
                    <p>
                    <p class="journalTitle">Date of Entry:</p>
                    <%= moods[i].date %>
                        </p>
                        <p>
                        <p class="journalTitle">Remedy Used?</p>
                        <%= moods[i].usedRemedy %>
                            </p>
                            <p>
                            <p class="journalTitle">What Remedy Was Used?</p>
                            <%= moods[i].remedy %>
                                </p>
                                <p>
                                <p class="journalTitle">Notes:</p>
                                <%= moods[i].notes %>
                                    </p>

                                    <% } %>




            </div>
            <div class="col-sm">
                <form method="POST" action="trackJourney">
                    <div class="rendered-form">
                        <div class="">
                            <h1 id="control-4916268">Today's Entry</h1>
                        </div>
                        <div class="formbuilder-radio-group form-group field-radio-group-1669610492667">
                            <label for="radio-group-1669610492667" class="formbuilder-radio-group-label">How's Your
                                Mood?</label>
                            <div class="radio-group">
                                <div class="formbuilder-radio">
                                    <input name="mood" id="radio-group-1669610492667-0" value="Happy" type="radio">
                                    <label for="radio-group-1669610492667-0">Happy</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="mood" id="radio-group-1669610492667-1" value="Sad" type="radio">
                                    <label for="radio-group-1669610492667-1">Sad</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="mood" id="radio-group-1669610492667-2" value="Angry" type="radio">
                                    <label for="radio-group-1669610492667-2">Angry</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="mood" id="radio-group-1669610492667-3" type="radio" value="Content">
                                    <label for="radio-group-1669610492667-3">Content</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="mood" id="radio-group-1669610492667-4" type="radio" value="Anxious">
                                    <label for="radio-group-1669610492667-4">Anxious</label>
                                </div>
                            </div>
                        </div>
                        <!--THIS IS THE MOOD TRACKING PART OF THE FORM ==========================-->
                        <div class="formbuilder-radio-group form-group field-radio-group-1669610888258">
                            <label for="radio-group-1669610888258" class="formbuilder-radio-group-label">How's Your
                                Energy?</label>
                            <div class="radio-group">
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-0" value="tired" type="radio">
                                    <label for="radio-group-1669610888258-0">Tired</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-1" value="very tired"
                                        type="radio">
                                    <label for="radio-group-1669610888258-1">Very Tired</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-2"
                                        value="Can't Even Get Out Of Bed" type="radio">
                                    <label for="radio-group-1669610888258-2">Can't Even Get Out Of Bed</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-3" type="radio" value="Content">
                                    <label for="radio-group-1669610888258-3">Content</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-4" type="radio"
                                        value="Perked Up">
                                    <label for="radio-group-1669610888258-4">Perked Up</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-5" type="radio"
                                        value="Wicked Excited">
                                    <label for="radio-group-1669610888258-5">Wicked Excited</label>
                                </div>
                                <div class="formbuilder-radio">
                                    <input name="energy" id="radio-group-1669610888258-6" type="radio" value="Manic">
                                    <label for="radio-group-1669610888258-6">Manic</label>
                                </div>
                            </div>
                        </div>
                        <div class="formbuilder-checkbox-group form-group field-checkbox-group-1669610634456">
                            <label for="checkbox-group-1669610634456" class="formbuilder-checkbox-group-label">Did You
                                Use A Remedy?</label>
                            <div class="checkbox-group">
                                <div class="formbuilder-checkbox">
                                    <input name="usedRemedy" id="checkbox-group-1669610634456-0" value="true"
                                        type="radio">
                                    <label for="checkbox-group-1669610634456-0">Yes</label>
                                </div>
                                <div class="formbuilder-checkbox">
                                    <input name="usedRemedy" value="false" id="checkbox-group-1669610634456-1"
                                        type="radio">
                                    <label for="checkbox-group-1669610634456-1">No</label>
                                </div>
                            </div>
                        </div>
                        <div class="formbuilder-textarea form-group field-textarea-1669610716645">
                            <label for="textarea-1669610716645" class="formbuilder-textarea-label">What Remedy Did You
                                Use?</label>
                            <textarea type="textarea" class="form-control" name="remedy"
                                id="textarea-1669610716645"></textarea>
                        </div>
                        <div class="formbuilder-textarea form-group field-textarea-1669611009422">
                            <label for="textarea-1669611009422" class="formbuilder-textarea-label">Anything
                                Else?</label>
                            <textarea type="textarea" class="form-control" name="notes"
                                id="textarea-1669611009422"></textarea>
                        </div>
                        <div class="formbuilder-button form-group field-button-1669611036351">
                            <button type="submit" class="btn-success btn" id="button-1669611036351">Submit My
                                Entry</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>

    <!-- Optional JavaScript -->
